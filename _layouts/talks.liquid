---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title | downcase }}</h1>
    <p class="desc">{{ page.intro }}</p>
  </header>

  <article>
    <div class="talks-list">
      {% if page.talks %}
        <ul class="talks">
          {% for talk in page.talks %}
            <li class="talk-item">
              <h3 class="talk-title">
                {% if talk.link %}
                  <a href="{{ talk.link }}" target="_blank" rel="noopener">{{ talk.title }}</a>
                {% else %}
                  {{ talk.title }}
                {% endif %}
              </h3>
              <p><strong>Date:</strong> {{ talk.date }}</p>
              <p><strong>Location:</strong> {{ talk.location }}</p>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p>No talks listed yet.</p>
      {% endif %}
    </div>
  </article>
</div>
